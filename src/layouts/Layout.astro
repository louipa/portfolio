---
import "../styles/global.css";
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Louis Painter</title>
  </head>
  <slot name="header" />
  <body class="flex-center flex-column">
    <main>
      <div class="bg"></div>
      <div class="paper">
        <slot name="content" />
      </div>
    </main>
    <slot name="footer" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
  }

  .bg {
    background-color: var(--color-background);
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: -2;
    top: -1vh;
    left: 0;
    background: rgba(var(--color-background-rgb), 0.8);
  }

  body::before {
    --line-color: #bad4b8;
    --line-size: 80px;
    content: "";
    height: 100vh;
    width: 100vw;
    position: fixed;
    background:
      linear-gradient(90deg, var(--line-color) 1px, transparent 1px) 0 0 /
        var(--line-size) var(--line-size),
      linear-gradient(var(--line-color) 1px, transparent 1px) 0 0 /
        var(--line-size) var(--line-size);
    z-index: -1;
    top: -1vh;
    mask: linear-gradient(-360deg, transparent 0%, white);
  }

  .paper {
    background-color: transparent;
    max-width: 60rem;
  }
</style>
