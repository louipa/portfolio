<script>
  document.addEventListener("DOMContentLoaded", function () {
    const scrollables = document.getElementsByClassName("smooth-scroll");
    for (const scroll of scrollables) {
      const ref = scroll.getAttribute("href");
      if (ref !== null) {
        const target =
          ref.length <= 1
            ? document.body
            : document.getElementById(ref.substring(1));
        scroll.addEventListener("click", (e) => {
          e.preventDefault();
          target?.scrollIntoView({ behavior: "smooth" });
        });
      }
    }
  });
</script>

