---
interface Props {
  href: string;
  target?: string;
  type?: string;
}
const props = Astro.props as Props;
---

<a
  class="link-button flex-center"
  href={props.href}
  target={props.target}
  type={props.type}
>
  <slot />
</a>

<style is:global>
  .link-button {
    --box-shadow: #5b5b57;
    background-color: #f3bd20;
    border-radius: 0.5rem;
    box-shadow: 2px 2px var(--box-shadow);
    transform: translate(0, 0);
    transition:
      transform 0.1s ease-in-out,
      box-shadow 0.1s ease-in-out,
      background-color 0.1s linear;
    cursor: pointer;
    text-decoration: none;
    padding: 0.5rem 1rem;

    p {
      color: black;
    }
  }

  .link-button:hover {
    transform: translate(2px, 2px);
    box-shadow: 0px 0px var(--box-shadow);
    background-color: #5b5b57;

    p,
    svg {
      color: white;
    }
  }

  .link-button svg {
    width: 1.5rem;
    height: 1.5rem;
    margin-right: 0.5rem;
    color: black;
  }
</style>
